<div class="page-header">
  <h1>
    Coaching positions
    <a href="/coaching_positions/new" class="btn btn-lg btn-success">New Coaching position</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Improvement plan</th>
        <th>Actions</th>
      </tr>

      <% @coaching_positions.each do |coaching_position| %>
      <tr>
        <td>
          <% if coaching_position.user.present? %>
            <a href="/teachers/<%= coaching_position.user.id %>">
              <%= coaching_position.user.email %>
            </a>
          <% end %>
        </td>
        <td>
          <% if coaching_position.improvement_plan.present? %>
            <a href="/improvement_plans/<%= coaching_position.improvement_plan.id %>">
              <%= coaching_position.improvement_plan.teacher_id %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/coaching_positions/<%= coaching_position.id %>" class="btn btn-primary">Show</a>
          <a href="/coaching_positions/<%= coaching_position.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_coaching_position/<%= coaching_position.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @coaching_positions, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
