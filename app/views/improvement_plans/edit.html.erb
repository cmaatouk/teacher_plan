<!-- Validation failure messages -->
<% if @improvement_plan.errors.any? %>
  <% @improvement_plan.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Improvement Plan #<%= @improvement_plan.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_improvement_plan/<%= @improvement_plan.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for teacher_id -->
      <div class="form-group">
        <label for="teacher_id" class="control-label">
          Teacher
        </label>

        <input type="text" id="teacher_id" name="teacher_id" placeholder="Teacher" class="form-control" value="<%= @improvement_plan.teacher_id %>">
      </div>

      <!-- Label and input for leader -->
      <div class="form-group">
        <label for="leader" class="control-label">
          Leader
        </label>

        <input type="text" id="leader" name="leader" placeholder="Leader" class="form-control" value="<%= @improvement_plan.leader %>">
      </div>

      <!-- Label and input for action_state -->
      <div class="form-group">
        <label for="action_state" class="control-label">
          Action state
        </label>

        <input type="text" id="action_state" name="action_state" placeholder="Action state" class="form-control" value="<%= @improvement_plan.action_state %>">
      </div>

      <button class="btn btn-warning">
        Update Improvement Plan
      </button>
      or
      <a href="/improvement_plans/<%= @improvement_plan.id %>">Cancel</a>
    </form>
  </div>
</div>
